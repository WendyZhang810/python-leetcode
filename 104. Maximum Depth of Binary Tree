# Definition for a binary tree node.
# class TreeNode:
#     def __init__(self, x):
#         self.val = x
#         self.left = None
#         self.right = None

class Solution:
    def maxDepth(self, root):
        """
        :type root: TreeNode
        :rtype: int
        """ 
        if root is None: 
            return 0 

        stack=[(1,root)]
        depth=0
        cur_depth=1
        while stack:
            cur_depth,root=stack.pop()
            depth=max(depth,cur_depth)  
            if root.right:
                stack.append((cur_depth+1,root.right))
            if root.left:
                stack.append((cur_depth+1,root.left))
            
        return depth
